<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Wheels Up!</h1>
      <h3>The App that helps to keep track of counties previously visited and countries to still explore!</h3>

      <form>
        <div class="form-group">
          <label for="inputNewCountry">Countries to visit:</label>
          <input class="form-control" type="text" id="inputNewCountry" placeholder="Mars">
        </div>
        <br>
        <button type="button" class="btn btn-secondary">Secondary</button>
      </form>

      <br>

      <div>
        <ul id="toVisit">
          {{#each countries}}
              <li>{{this.dataValues.country_name}} <button class="addToVisited">Wheels Up!</button></li>
          {{/each}}
        </ul>
      </div>

    </div>
  </div>
</div>