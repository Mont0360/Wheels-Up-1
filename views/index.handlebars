<div class="row">
  <div class="col-md-12" id="imageBackground">
    <img src="../../assets/images/travel2.jpeg" alt="travel picture">
  </div>
</div>
<div class="container">


  <div class="row">

    <div class="col-md-12">

      <h1>Wheels Up!</h1>

      <p class="allFlags">
        <img alt="Poland" class="card card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/PL.svg" height="10" width="10" />
        <img alt="USA" class="card card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/US.svg" height="10" width="10" />
        <img alt="Great-Britain" class="card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/GB.svg" height="10" width="10" />
        <img alt="Australia" class="card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/AU.svg" height="10" width="10" />
        <img alt="Belgium" class="card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/BE.svg" height="10" width="10" />
        <img alt="Colombia" class="card-img-top flags" src="http://catamphetamine.gitlab.io/country-flag-icons/3x2/CO.svg" height="10" width="10" />
      </p>

      <h5>The travel app that tracks countries visited and countries left to explore!</h5>

    </div>

  </div>

  {{!-- This row displays the desired and visited lists of countries --}}
  <div class="row">

    <div class="col-md-6">
      <i class="fas fa-plane-departure"></i>
      <span class="titleName">Countries to Visit</span>
      <ul id="desired">
        {{#each countries}}
        {{#if this.dataValues.desired}}
        <li>{{this.dataValues.country_name}} <button class="addToVisited"
            data-country="{{this.dataValues.country_name}}">Wheels Up!</button></li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <i class="fas fa-plane-arrival"></i>
      <span class="titleName">Countries Visited</span>
      <ul id="visited">
        {{#each countries}}
        {{#if this.dataValues.visited}}
        <li>{{this.dataValues.country_name}}<button class="btn removeCountry"
            data-country="{{this.dataValues.country_name}}"><i class="fas fa-trash visitedIcon"></i></button></li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <br>
  <br>
  <br>

  {{!-- This row is to have all search functions and their country display --}}
  <div class="row">

    <div class="col-md-9">
      {{!-- 3 search functions HERE (input, a-z, region) --}}
      <div class="row">

        <div class="col-md-12">
          {{!-- #1 Input search --}}

          <div class="row">

            <div class="col-md-12">
              <form id="countrySearchForm">
                <div class="form-group">
                  <label for="inputNewCountry"><i class="fas fa-search"></i> Search for a country:</label>
                  <input class="form-control" type="text" id="countrySearch"
                    placeholder="Be sure to use proper capitalization and spelling...">
                </div>
                <button type="button" id="countrySearchBtn" class="btn btn-primary">Search</button>
              </form>
            </div>

          </div>
          <br>
          <br>
          <br>
          {{!-- #2 A-Z search --}}
          <div class="row">

            <div class="col-md-12" id="letters" id="abcsearch">
              <h4 class="searchByAlphabet"><i class="fas fa-search"></i> Search for a country by the alphabet:</h4>
              <br>
              <button class="alphaButton">A </button>
              <button class="alphaButton">B </button>
              <button class="alphaButton">C </button>
              <button class="alphaButton">D </button>
              <button class="alphaButton">E </button>
              <button class="alphaButton">F </button>
              <button class="alphaButton">G </button>
              <button class="alphaButton">H </button>
              <button class="alphaButton">I </button>
              <button class="alphaButton">J </button>
              <button class="alphaButton">K </button>
              <button class="alphaButton">L </button>
              <button class="alphaButton">M </button>
              <button class="alphaButton">N </button>
              <button class="alphaButton">O </button>
              <button class="alphaButton">P </button>
              <button class="alphaButton">Q </button>
              <button class="alphaButton">R </button>
              <button class="alphaButton">S </button>
              <button class="alphaButton">T </button>
              <button class="alphaButton">U </button>
              <button class="alphaButton">V </button>
              <button class="alphaButton">W </button>
              <button class="alphaButton">X </button>
              <button class="alphaButton">Y </button>
              <button class="alphaButton">Z </button>
            </div>
          </div>
          <br><br><br>
          {{!-- #3 Region search --}}
          <div class="row">

            <div class="col-md-12">
              <h4><i class="fas fa-search"></i> Search for a country by region:</h4>
              <br>
              <button class="countryRegion">NORTHERN AMERICA</button>
              <button class="countryRegion">WESTERN EUROPE</button>
              <button class="countryRegion">EASTERN EUROPE</button>
              <button class="countryRegion">NORTHERN AFRICA</button>
              <button class="countryRegion">ASIA &#40;EX. NEAR EAST&#41;</button>
              <button class="countryRegion">OCEANIA</button>
              <button class="countryRegion">SUB-SAHARAN AFRICA</button>
              <button class="countryRegion">LATIN AMER. &#38; CARIB</button>
              <button class="countryRegion">C.W. OF IND. STATES</button>
              <button class="countryRegion">NEAR EAST</button>
              <button class="countryRegion">BALTICS</button>
            </div>

          </div>

        </div>
      </div>
    </div>
    {{!-- Results for any of the search functions HERE --}}
    <div class="col-md-3">

      <div id="showCountryCard"></div>
      <div>
        <ul id="countrySearchDisplay"></ul>
      </div>

    </div>


  </div>

  <br>
  <br>
  <br>

  {{!-- This row is for the travel notes heading --}}
  <div class="row">

    <div class="col-md-12">
      <h3>Travel Notes <i class="fas fa-book-open"></i></h3>
    </div>

  </div>
  <br>
  {{!-- This row is for the travel notes input form and notes display --}}
  <div class="row">

    <div class="col-md-6">
      <form>
        <div class="form-group">
          <label for="travelNoteTitle">Title</label>
          <input type="text" class="form-control" id="travelNoteTitle" placeholder="Parisian Restaurants">
        </div>
        <div class="form-group">
          <label for="travelNoteText">Note</label>
          <textarea class="form-control" id="travelNoteText"
            placeholder="-Les Poissons&#10;-De Pomme&#10;-Cinq Petits Canards" rows="5"></textarea>
        </div>
        <button type="submit" class="saveBlueBtn" id="saveNoteBtn">Save</button>
      </form>
    </div>

    <div class="col-md-6">
      <ul>
        {{#each notes}}
        <br>
        <div class="card w-100">
          <div class="card-body">
            <h5 class="card-title">{{this.dataValues.note_title}}</h5>
            <p class="card-text">{{this.dataValues.note_text}}</p>
            <button class="btn btn-danger deleteNoteBtn" data-id="{{this.dataValues.id}}"><i
                class="fas fa-trash"></i></button>
          </div>
        </div>
        {{/each}}
      </ul>
    </div>

  </div>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</div>